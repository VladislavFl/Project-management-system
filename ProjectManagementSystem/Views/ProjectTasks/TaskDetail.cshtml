@model ProjectManagementSystem.Models.Tasks

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div>
                <div class="form-group">
                    <label asp-for="Name">Название</label>
                    <input asp-for="Name" class="form-control" disabled="disabled" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Priorety">Приоритет</label>
                    <input asp-for="Priorety" class="form-control" disabled="disabled" />
                    <span asp-validation-for="Priorety"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Техническое задание</label>
                    <input asp-for="Description" class="form-control" disabled="disabled" />
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserId">Исполнитель</label>
                    <select asp-for="UserId" class="form-control" disabled="disabled" asp-items="ViewBag.Users"></select>
                </div>

                <a asp-controller="ProjectTasks" asp-action="TaskUpdate" asp-route-productId="@Model.Id" class="btn btn-outline-dark">Изменить</a>
                <input asp-for="Id" hidden="hidden" />
                <button class="btn btn-outline-danger" type="button" data-toggle="modal" data-target="#deletionModal">Удалить</button>
                <a asp-controller="ProjectTasks" asp-action="Index">Назад к списку</a>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<div class="modal fade" id="deletionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content justify-content-between" style="height: 200px; background-color: #6b6b6b; border-radius: 0.5rem;">

            <div class="text-center text-white font-weight-bold mt-3" style="font-size: 22px">
                Удалить данную запись?
            </div>
            <div class="modal-footer justify-content-between" style="border-top:0px ">
                <button type="button" class="btn btn-light pl-3 pr-3" data-dismiss="modal">Отмена</button>

                <form asp-controller="ProjectTasks" asp-action="TaskDelete" method="post">
                    <input asp-for="Id" hidden="hidden" />
                    <input type="submit" value="Удалить" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
