@model ProjectManagementSystem.Models.Project

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div>
                <input asp-for="User.Id" hidden="hidden" />
                <div class="form-group">
                    <label asp-for="Name">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Описание проекта</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GitUrl">Репозиторий GitHub</label>
                    <input asp-for="GitUrl" class="form-control" />
                    <span asp-validation-for="GitUrl" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateEnd">Дата завершения проекта</label>
                    <input type="date" asp-for="DateEnd" class="form-control" />
                    <span asp-validation-for="DateEnd" style="color: red;"></span>
                </div>
                <div>
                    <label asp-for="UserId">Выбрать владельца</label>
                    <select asp-for="UserId" class="form-control" asp-items="@ViewBag.Users"></select>
                    <span asp-validation-for="UserId" style="color: red;"></span>
                </div>
                <br />

                <a asp-controller="Project" asp-action="ProjectUpdate" asp-route-productId="@Model.Id" class="btn btn-outline-dark">Изменить</a>
                <input asp-for="Id" hidden="hidden" />
                <button class="btn btn-outline-danger" type="button" data-toggle="modal" data-target="#deletionModal">Удалить</button>
                <a asp-controller="Project" asp-action="Index">Назад к списку</a>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<div class="modal fade" id="deletionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content justify-content-between" style="height: 200px; background-color: #6b6b6b; border-radius: 0.5rem;">

            <div class="text-center text-white font-weight-bold mt-3" style="font-size: 22px">
                Удалить данную запись?
            </div>
            <div class="modal-footer justify-content-between" style="border-top:0px ">
                <button type="button" class="btn btn-light pl-3 pr-3" data-dismiss="modal">Отмена</button>

                <form asp-controller="ProjectTasks" asp-action="TaskDelete" method="post">
                    <input asp-for="Id" hidden="hidden" />
                    <input type="submit" value="Удалить" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
